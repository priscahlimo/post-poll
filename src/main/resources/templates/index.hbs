{{#partial "content"}}

<h1>Post list!</h1>

{{#if posts}} <!--if posts exist, then -->
       {{#each posts }} <!--loop-->

        <p>{{ content }}</p> <!--show-->
       {{/each}}
   {{else}} <!--no posts!-->
    <p>No posts!</p>
   {{/if}}



<form action="/posts/new" method="POST">
  <label for="content"> Add Post Description</label>
  <input id="content" name="content" type="text">

  <button type="submit" class="btn btn-default">Add post</button>
</form>
{{/partial}}

{{> layout.hbs}}